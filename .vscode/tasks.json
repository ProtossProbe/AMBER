{
    "version": "2.0.0",
    "tasks": [{
            "taskName": "compile",
            "type": "shell",
            "command": "clang-omp++",
            "args": [
                "-g",
                "-fopenmp -std=c++1z -Wall -Wno-missing-braces -Wno-unused-variable -Wno-unused-parameter -Wno-unused-function -pthread src/main.cpp src/crtbp.cpp -o main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "run",
            "command": "./main",
            "args": [
                "assets/input.in",
                "assets/info.in",
                "assets/switch.in"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "taskName": "clean",
            "command": "rm",
            "args": [
                "assets/*.txt"
            ],
            "problemMatcher": []
        }
    ]
}